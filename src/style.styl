@import 'nib'

global-reset()


notext()
	white-space nowrap
	text-indent -9999px
	overflow hidden

uniform-centerize()
	display flex
	flex-direction column
	justify-content center

// tablet()
// 	@media only screen and (max-width: 960px)
// 			{block}

mobile()
	@media only screen and (max-width: 900px)
		{block}

.mq
	font-family 'pc'
	+mobile()
		font-family 'mobile'


//--------------------------------------------------

*, ::after, ::before
	box-sizing: border-box
	outline none

html, body
	width 100%
	height 100%

html
	font-family: Helvetica, "游ゴシック体", "Yu Gothic", YuGothic, sans-serif
	font-smoothing antialiased
	-moz-osx-font-smoothing: grayscale
	font-size 12px

body
	background black
	color white

//--------------------------------------------------
// tab

.tab
	position fixed
	bottom 0
	width 100%
	background gray
	font-size 1.4rem
	padding 0.5rem 0
	display flex
	z-index 99

	div
		margin 0 1rem
		cursor pointer

.page
	position absolute
	top 0
	left 0
	right 0
	bottom 0
	overflow scroll
	background black

//--------------------------------------------------
// table

.highlight
	background red

//--------------------------------------------------
// detail

$cell-padding = 1.2em

.detail
	border-left 1px solid white
	border-top 1px solid white
	font-size 2rem

	+mobile()
		font-size 1rem

	.cell
		padding 0.6em 0.3em
		border-right 1px solid white
		border-bottom 1px solid white

	span
		color #333
		padding-right .3em

// cut
.cut
	display flex
.cut__number
	flex-grow 1
	font-size 3em
	text-align center
.cut__title
	flex-grow 4
.cut__name
	font-size 2em
.cut__set-type
	flex-grow 2
	font-size 3em

// range
.range
	display flex
	font-size 2em
.range__inout
	flex-grow 3
.range__duration
	flex-grow 2

// member
.member
	display flex
	text-align center
.member__one
	flex-grow 1
.member__value
	font-size 1.5em
	line-height 2em - $cell-padding
	height 2em

// text
.text
	display flex
	align-items stretch
.text__one
	flex-grow 1
.text__title
	text-align center
.text__value
	height 10em

//--------------------------------------------------
// action

button.action__action
	text-align: center
	font-size 8rem
	width 6em
	margin 0 auto

.centerize-panel
	position absolute
	top 0
	left 0
	right 0
	bottom 0
	uniform-centerize()

//--------------------------------------------------
// shooting


.shooting__count
	margin 0 auto
	font-size 24rem

.shooting__progress
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	background white
	transform-origin: top right
	transform translateX(100%)
	z-index 20
	mix-blend-mode difference
